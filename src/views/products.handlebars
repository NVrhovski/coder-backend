<div class="table-container">
    <h1>Welcome {{data.user.first_name}} {{data.user.last_name}}!</h1>
    <h2>Role: {{data.user.role}}</h2>
    <table class="table table-striped">
        <thead>
            <tr>
            <th scope="col">Title</th>
            <th scope="col">Category</th>
            <th scope="col">Price</th>
            <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each data.payload}}
            <tr>
            <td>{{this.title}}</td>
            <td>{{this.category}}</td>
            <td>{{this.price}}</td>
            <td>
                <a href="/products/{{this._id}}"><button class="btn btn-primary">Go to detail</button></a>
            </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <div class="paginator-container">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                {{#if data.hasPrevPage}}
                <li class="page-item">
                    <a class="page-link" href="/products?limit={{data.limit}}&page={{data.prevPage}}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                {{else}}
                <li class="page-item disabled">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                {{/if}}
                {{#forHelper data.totalPages}}
                <li class="page-item"><a class="page-link" href="/products?limit={{../data.limit}}&page={{this}}">{{this}}</a></li>
                {{/forHelper}}
                {{#if data.hasNextPage}}
                <li class="page-item">
                    <a class="page-link" href="/products?limit={{data.limit}}&page={{data.nextPage}}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
                {{else}}
                <li class="page-item disabled">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
                {{/if}}
            </ul>
        </nav>
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="/products?limit=5&page=1">5</a></li>
                <li class="page-item"><a class="page-link" href="/products?limit=10&page=1">10</a></li>
                <li class="page-item"><a class="page-link" href="/products?limit=20&page=1">20</a></li>
            </ul>
        </nav>
    </div>
</div>

<link rel="stylesheet" href="/static/css/products.css"/>